extends ../layouts
block content
    .container
        .row
             .page-header
                    h1=title
                    .row
                        .col-md-4
                                small  
                        .col-md-8
                                form(method="get",action="/search")
                                    .input-group.col-sm-4.pull-right
                                        input.form-control(type="text",name="keyword")
                                        span.input-group-btn 
                                            button.btn.btn-default(type="submit") 搜索
            each cat in categories
                .panel.panel-default
                    .panel-heading
                        a(href="/#{cat._id}/1")
                            h3 #{cat.name}
                    .panel-body
                        if cat.movies && cat.movies.length>0
                            each movie in cat.movies
                                .col-md-2
                                    .thumbnail
                                        a(href="/movie/#{movie.id}")
                                            img(src="#{movie.poster}",alt="#{movie.title}")
                                        .caption
                                            h4 片名：#{movie.title}
                                            p: a.btn.btn-primary(href="",role="button") 觀看
                            