extends ../layouts
block content
    .container
        .row
            .col-md-7
                embed(src="/video/b.mp4",width="720",
                height="600",allowFullScreen="true" quality="high" 
                align="middle")
            .col-md-5
                dl.dl-horizontal
                    dt 電影主題
                    dd=movie.title
                    dt 導演
                    dd=movie.director
                    dt 國家
                    dd=movie.nation
                    dt 語言
                    dd=movie.lang
                    dt 上映年份
                    dd=movie.year
                    dt 摘要
                    dd=movie.summary
            h1 #{movie}